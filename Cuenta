<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Eliminar cuenta sin redirección</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      text-align: center;
    }
    button {
      padding: 10px 20px;
      font-size: 18px;
      cursor: pointer;
      background-color: #d9534f;
      color: white;
      border: none;
      border-radius: 5px;
    }
    #mensaje {
      margin-top: 20px;
      font-size: 18px;
      color: green;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Cuenta de Usuario</h1>
  <button id="btnEliminar">Eliminar cuenta</button>

  <div id="mensaje"></div>

  <script>
    const btnEliminar = document.getElementById('btnEliminar');
    const mensaje = document.getElementById('mensaje');

    btnEliminar.addEventListener('click', () => {
      const confirmar = confirm('¿Estás seguro que quieres eliminar la cuenta?');

      if (confirmar) {
        // Aquí iría la lógica real para eliminar la cuenta, por ejemplo llamar una API
        // Pero aquí solo mostramos el mensaje sin redirigir ni salir de la página
        mensaje.textContent = 'Cuenta eliminada correctamente.';
        // Opcional: desactivar botón para evitar más clics
        btnEliminar.disabled = true;
        btnEliminar.style.backgroundColor = 'gray';
      } else {
        mensaje.textContent = 'Operación cancelada.';
      }
    });
  </script>
</body>
